@model IdentityRole


@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-controller="Roles" asp-action="Edit" class="form-group">

    <label asp-for="Id">ID</label>
    <input asp-for="Id" type="text" class="form-control" readonly/>
    <br />
    <label asp-for="Name">Name</label>
    <input asp-for="Name" type="text" class="form-control" />
    <br />

    <input type="submit" value="Edit" class="btn btn-primary btn-block" />

</form>

<a asp-controller="Roles" asp-action="AddOrRemoveUser" asp-route-RoleId="@Model.Id" class="btn btn-primary btn-block">Add Or Remove User From Roles</a>